{
  "name": "infinite-email-catcher",
  "version": "2.0.0",
  "description": "无限邮箱接码工具 - 微服务架构 + Vue前端",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "microservices": "node start-microservices.js",
    "microservices:dev": "nodemon --watch microservices --watch shared start-microservices.js",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test:setup": "node test-setup.js",
    "poller": "node poller.js",
    "poller:config": "node poller-config.js",
    "test:poller": "node test-poller.js"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "imap": "^0.8.19",
    "imap-simple": "^5.1.0",
    "lodash": "^4.17.21",
    "mailparser": "^3.6.5",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "email",
    "temporary",
    "nodejs"
  ],
  "author": "",
  "license": "MIT"
}
